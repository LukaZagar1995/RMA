<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:padding="10dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

	<de.hdodenhof.circleimageview.CircleImageView
			android:layout_width="50dp"
			android:layout_height="50dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			android:id="@+id/item_profile_image"
			android:src="@mipmap/ic_launcher"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/nav_username_text"
			android:id="@+id/tv_uItem_username"
			app:layout_constraintLeft_toRightOf="@id/item_profile_image"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_toEndOf="@id/item_profile_image"
			android:layout_centerVertical="true"
			android:textSize="18sp" android:layout_marginTop="13dp"
			android:layout_marginStart="10dp"/>

	<de.hdodenhof.circleimageview.CircleImageView
			android:layout_width="15dp"
			android:layout_height="15dp"
			app:civ_border_width="10dp"
			app:civ_border_color="@color/onlineStatus"
			android:id="@+id/item_online_image"
			android:visibility="gone"
			android:src="@mipmap/ic_launcher"
			android:layout_marginTop="20dp"
			android:layout_marginStart="-4dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toRightOf="@id/item_profile_image"
			app:layout_constraintRight_toLeftOf="@id/tv_uItem_username"/>

	<de.hdodenhof.circleimageview.CircleImageView
			android:layout_width="15dp"
			android:layout_height="15dp"
			app:civ_border_width="10dp"
			app:civ_border_color="@color/offlineStatus"
			android:id="@+id/item_offline_image"
			android:visibility="gone"
			android:src="@mipmap/ic_launcher"
			android:layout_marginTop="35dp"
			android:layout_marginStart="35dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toLeftOf="@id/tv_uItem_username"/>

</android.support.constraint.ConstraintLayout>