<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:padding="8dp"
		android:layout_height="wrap_content">

	<RelativeLayout
			android:layout_width="300dp"
			android:layout_alignParentEnd="true"
			android:layout_height="wrap_content">

		<de.hdodenhof.circleimageview.CircleImageView
				android:layout_width="40dp"
				android:src="@mipmap/ic_launcher"
				android:id="@+id/civ_profile_chat_Item"
				android:visibility="gone"
				android:layout_height="40dp"/>

		<TextView
				android:layout_width="wrap_content"
				android:id="@+id/tv_chat_MessageItem"
				android:layout_alignParentEnd="true"
				android:layout_toEndOf="@id/civ_profile_chat_Item"
				android:layout_marginEnd="5dp"
				android:textColor="@android:color/white"
				android:background="@drawable/background_right"
				android:text="@string/tv_chat_right_text"
				android:textSize="18sp"
				android:padding="8dp"
				android:layout_height="wrap_content"/>

		<TextView
				android:layout_width="wrap_content"
				android:id="@+id/tv_txt_seen"
				android:text="@string/tv_item_seen_text"
				android:layout_below="@id/tv_chat_MessageItem"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
				android:layout_height="wrap_content"/>

	</RelativeLayout>

</RelativeLayout>